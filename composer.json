{
    "name": "lhsazevedo/slim-restatic-skeleton",
    "description": "A Slim Framework skeleton application with Laravel like facades",
    "type": "project",
    "keywords": ["microframework", "rest", "router", "psr7", "facade"],
    "homepage": "http://github.com/lhsazevedo/Slim-ReStatic-Skeleton",
    "license": "MIT",
    "authors": [
        {
            "name": "Lucas H. Azevedo",
            "email": "lhs_azevedo@hotmail.com"
        }, {
            "name": "Josh Lockhart",
            "email": "info@joshlockhart.com",
            "homepage": "http://www.joshlockhart.com/"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17",
        "lhsazevedo/restatic": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload-dev": {
        "psr-4": {
            "App\\": "src/",
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }

}
